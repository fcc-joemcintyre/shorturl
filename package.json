{
  "name": "shorturl",
  "author": "Joe McIntyre (j_h_mcintyre@yahoo.com)",
  "description": "URL Shortener service",
  "version": "0.3.2",
  "type": "module",
  "module": "./lib/index.js",
  "typings": "./lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/fcc-joemcintyre/shorturl"
  },
  "license": "MIT",
  "dependencies": {
    "express": "4.17.3"
  },
  "scripts": {
    "build": "tsc",
    "test": "mocha && npm run postman:run",
    "postman:run": "cd postman && node --loader ts-node/esm test-api.ts",
    "postman:server": "cd postman && node --loader ts-node/esm test-api.ts --server",
    "start": "nodemon lib/main.js --port=3000",
    "lint": "eslint --ext .js,.ts,.tsx --no-error-on-unmatched-pattern ."
  },
  "devDependencies": {
    "@cygns/eslint-config-node": "6.0.0",
    "@types/express": "4.17.13",
    "@types/mocha": "9.1.0",
    "@types/newman": "5.3.0",
    "@types/node": "17.0.23",
    "@typescript-eslint/parser": "5.18.0",
    "@typescript-eslint/eslint-plugin": "5.18.0",
    "eslint": "7.25.0",
    "eslint-plugin-import": "2.25.4",
    "mocha": "9.2.2",
    "newman": "5.3.2",
    "nodemon": "2.0.15",
    "ts-node": "10.7.0",
    "typescript": "4.6.3"
  },
  "engines": {
    "node": "^16.13"
  }
}
